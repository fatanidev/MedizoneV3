<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.fatani.medizone_v01.LoginScreen">

    <Button
        android:id="@+id/btnScanPatent"
        android:layout_width="287dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:background="#2d70c5"
        android:text="Scan Patient"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/imgDoctorFirst"
        app:layout_constraintTop_toBottomOf="@+id/imgDoctorFirst" />

    <Button
        android:id="@+id/button5"
        android:layout_width="287dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:background="#2d70c5"
        android:text="Appointments"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnScanPatent"
        app:layout_constraintTop_toBottomOf="@+id/btnScanPatent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="287dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
